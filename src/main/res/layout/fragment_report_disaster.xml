<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noddyandfriends.disastermanager.ReportDisasterFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:text="Report Disaster"
        android:textSize="32sp"
        android:layout_marginTop="48sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Disaster Type:"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="24sp"
            android:layout_marginRight="16dp"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/report_disaster_disaster_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/disaster_type_entries"
            android:layout_gravity="center"
            android:textAlignment="center" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/report_disaster_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Report Disaster"/>

</LinearLayout>
